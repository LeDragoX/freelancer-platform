<!DOCTYPE html>
<html>
  <head>
    <title>üßëüèª‚Äçüíº Freelancer Platform</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="container">
      <header>
        <nav>
          <%= link_to "P√°gina Inicial", root_path %>
          <% if user_signed_in?  %>
            <%= "#{t(:user, scope: "activerecord.models")} #{current_user.email}" %>
            <%= link_to "Logout", destroy_user_session_path, method: :delete %>

            <div>
              <%= link_to "Meus Projetos", my_projects_projects_path %>
              <%= link_to "Novo Projeto", new_project_path %>
            </div>
          <% elsif !freelancer_signed_in? %>
            <p><%= link_to "Entrar como Usu√°rio", new_user_session_path %></p>
          <% end %>
          <% if freelancer_signed_in? %>
            <%= link_to "#{t(:freelancer, scope: "activerecord.models")} #{current_freelancer.email}", current_freelancer.profile || new_profile_path %>
            <%= link_to "Logout", destroy_freelancer_session_path, method: :delete %>
          <% elsif !user_signed_in? %>
            <p><%= link_to "Entrar como Freelancer", new_freelancer_session_path %></p>
          <% end %>
        </nav>

        <% if notice %>
          <p class="notice"><%= notice %></p>
        <% end %>
        <% if alert %>
          <p class="alert"><%= alert %></p>
        <% end %>
      </header>
      <hr>

      <main>
        <%= yield %>
      </main>
    </div>
  </body>
</html>
