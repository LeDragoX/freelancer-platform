<%= form_with model: [@project, @proposal] do |f| %>
  <div>
    <%= f.label :description %><br>
    <%= f.text_area :description, rows: 5, cols: 50, placeholder: I18n.t(:description, scope: "activerecord.attributes.proposal") %>
    <% @proposal.errors.full_messages_for(:description).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= f.label :hour_rate %>
    <%= f.number_field :hour_rate, min: 0.00, step: 0.01, placeholder: (number_to_currency "0,00", separator: ",") %>
    <% @proposal.errors.full_messages_for(:hour_rate).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= f.label :weekly_hours %>
    <%= f.number_field :weekly_hours, min: 1, placeholder: "60" %>
    <% @proposal.errors.full_messages_for(:weekly_hours).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= f.label :delivery_estimate %>
    <%= f.date_field :delivery_estimate %>
    <% @proposal.errors.full_messages_for(:delivery_estimate).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>


  <div>
    <% @proposal.errors.full_messages_for(:project_id).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <% @proposal.errors.full_messages_for(:freelancer_id).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= f.submit %>
  </div>
<% end %>